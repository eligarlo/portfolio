{
	"$schema": "https://frontmatter.codes/frontmatter.schema.json",
	"frontMatter.taxonomy.contentTypes": [
		{
			"name": "default",
			"pageBundle": false,
			"previewPath": null,
			"fields": [
				{
					"title": "Title",
					"name": "title",
					"type": "string",
					"single": true
				},
				{
					"title": "Description",
					"name": "description",
					"type": "string"
				},
				{
					"title": "Hero Image",
					"name": "ogImage",
					"type": "string",
					"single": true
				},
				{
					"title": "Publishing date",
					"name": "publishedAt",
					"type": "datetime",
					"isPublishDate": true
				},
				{
					"title": "Updated date",
					"name": "updatedAt",
					"type": "datetime",
					"isModifiedDate": true
				},
				{
					"title": "Tags",
					"name": "tags",
					"type": "string",
					"single": true
				},
				{
					"title": "Status",
					"name": "status",
					"type": "choice",
					"choices": ["draft", "published", "archived"]
				},
				{
					"title": "Featured",
					"name": "featured",
					"type": "choice",
					"choices": ["", "1", "2", "3"],
					"default": ""
				}
			]
		}
	],
	"frontMatter.framework.id": "next",
	"frontMatter.content.publicFolder": "public",
	"frontMatter.preview.host": "http://localhost:3000",
	"frontMatter.content.pageFolders": [
		{
			"title": "blog",
			"path": "[[workspace]]/src/content/blog"
		}
	]
}
